.form-group
  = hidden_field_tag 'setting[general_country_source_whitelist][]', ""
  = label_tag t('admin.settings.countries.title')
  = select_tag 'setting[general_country_source_whitelist]', 
      options_from_collection_for_select(Country.all, 'alpha2', 'name'),
      multiple: true,
      id: 'country-whitelist',
      hidden: true,
      'data-whitelist': Setting.value('general', 'country_source_whitelist')

  %p
    = t('admin.settings.countries.description')
